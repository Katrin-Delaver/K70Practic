<Window x:Class="K70Practic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:K70Practic"
        mc:Ignorable="d"
        Title="Рецепты" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Background="#006090">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/Images/nyam-nyam.png" Grid.RowSpan="2"/>
            <Button Grid.Row="2" Margin="10" Content="Блюда" FontSize="24" Background="#d5c847"/>
            <Button Grid.Row="3" Margin="10" Click="ShowingredientClick" Content="Ингредиенты" FontSize="24" Background="#d5c847"/>
            <Button Grid.Row="6" Margin="10" Content="Выход" FontSize="24" Background="#d5c847"/>

        </Grid>    
            <Frame Name="myFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Background="LightBlue"/>
    </Grid>
</Window>
